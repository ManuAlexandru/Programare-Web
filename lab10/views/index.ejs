<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <script src="//ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js">  </script>
    <script>


        $(document).ready(function () {
            var numar;//creez o variabila in care sa stochez numarul
            $("#submit").click(function () {
                numar = $("#number").val();//preiau numarul introdus in campul cu id ul number dupa apasarea butonului
                console.log(numar);
                //il trimit pe server
                $.post("http://localhost:3000/", { number: numar }, function (data) {
                    //console.log(data);
                });
            });
        });

    </script>

</head>

<body>
    <form>
        <input type="text" , id="number" ,name="Number" required>


        <button id="submit">Submit your number! </button>
    </form>
    <a href="Afisare"> Click here!</a>
</body>


</html>